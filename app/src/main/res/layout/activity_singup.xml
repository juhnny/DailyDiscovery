<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@drawable/gradient_purple_blue">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MyToolbarTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyToolbarTheme"/>

<!--    <TextView-->
<!--        android:id="@+id/tv"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Login Activity"-->
<!--        android:background="@color/purple_200"-->
<!--        android:layout_below="@id/toolbar"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일로 사용자 계정 만들기"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_all_round_square"
            android:hint="이메일"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_email"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_all_round_square"
            android:hint="작가명"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_nickname"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_all_round_square"
            android:hint="비밀번호"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_pw"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="아이디/비밀번호 안내"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="visible" />

        <!--        <TextView-->
        <!--            android:id="@+id/tv_guide_email_verification"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@id/btn_login"-->
        <!--            android:text="안내문"-->
        <!--            android:layout_marginTop="8dp"-->
        <!--            android:paddingHorizontal="16dp"-->
        <!--            android:paddingVertical="8dp"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="16dp"-->
        <!--            android:visibility="visible" />-->

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/tangerine"
            android:paddingVertical="12dp"
            android:text="확인"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>