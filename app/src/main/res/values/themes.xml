<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyDiscovery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/grey205</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tangerine</item>
        <item name="colorSecondaryVariant">@color/sunset</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/sisun_purple</item>
    </style>

    <!--  툴바의 배경색, 제목 글씨 색상 등의 스타일을 한번에 설정  -->
    <style name="MyToolbarStyle">
        <!--  그냥 background를 쓰면 app:background를 의미 -->
        <item name="android:background">@color/transparent</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <!--  툴바의 테마 지정 - OptionMenu의 색상 지정  -->
    <style name="MyToolbarTheme">
        <item name="colorControlNormal">@color/sunset</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="TodayFragmentTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor"  tools:targetApi="l">@color/dahong</item>
    </style>
</resources>